<?xml version="1.0" encoding="UTF-8"?>
<Trias version="1.2" xmlns="http://www.vdv.de/trias" xmlns:siri="http://www.siri.org.uk/siri">
	<ServiceRequest>
		<siri:RequestTimestamp>{{timestamp}}</siri:RequestTimestamp>
		<siri:RequestorRef>{{requestorRef}}</siri:RequestorRef>
		<RequestPayload>
			<TripRequest>
				<Origin>
					<LocationRef>
						<StopPointRef>{{startRef}}</StopPointRef>
					</LocationRef>
					<DepArrTime>{{departureTime}}</DepArrTime>
				</Origin>
				<Destination>
					<LocationRef>
						<StopPointRef>{{destinationRef}}</StopPointRef>
					</LocationRef>
				</Destination>
				<Params>
					<NumberOfResults>{{numberOfResults}}</NumberOfResults>
					<IncludeIntermediateStops>{{includeIntermediateStops}}</IncludeIntermediateStops>
					<IncludeRealtimeData>true</IncludeRealtimeData>
				</Params>
			</TripRequest>
		</RequestPayload>
	</ServiceRequest>
</Trias>